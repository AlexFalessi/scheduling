#!/usr/bin/env bash

CLASSPATH=.
workingDir=`dirname $0`
. $workingDir/env scheduler-log4j-server

yjp=-agentlib:yjpagent
opt="-Xms128m -Xmx2048m"

JAVACMD+=(-Dpa.scheduler.db.hibernate.dropdb=true -Dpa.rm.db.hibernate.dropdb=true -Dderby.stream.error.file="$PA_SCHEDULER/logs/derby.log" -Dproactive.pamr.agent.id=1 -Dproactive.pamr.agent.magic_cookie=scheduler $opt org.ow2.proactive.scheduler.util.SchedulerStarter "$@")

exec "${JAVACMD[@]}"

