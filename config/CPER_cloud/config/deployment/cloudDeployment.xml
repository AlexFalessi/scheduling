<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment xmlns="urn:gcm:deployment:1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd">

	<environment>
		<javaPropertyVariable name="user.home" />
		<javaPropertyDescriptorDefault name="os" value="unix" />
		<javaPropertyDescriptorDefault name="hostCapacity" value="1" /> <!-- 2 AMD opteron -->
		<javaPropertyDescriptorDefault name="vmCapacity" value="4" /><!-- 4 cores each -->
		<!-- user for the worker nodes -->
		<javaPropertyDescriptorDefault name="userName" value="cperUser"/>
		<javaPropertyDescriptorDefault name="userHomeDir" value="/home/cperUser/" />		
	</environment>

	<resources>
		<group refid="sgCloud">
			<host refid="CloudNode" />
		</group>
	</resources>

	<infrastructure>
		<hosts>
			<host id="CloudNode" os="${os}" hostCapacity="${hostCapacity}" vmCapacity="${vmCapacity}" username="${userName}">
				<homeDirectory base="root" relpath="${userHomeDir}" />
				<tool id="java" path="${userHomeDir}/tools/jdk1.6.0_14/bin/java"/>
				<tool id="proactive" path="${userHomeDir}/tools/Scheduler_CPER/"/>
			</host>
		</hosts>
		
		<groups>
			<sshGroup id="sgCloud" hostList="node[1-10].cloud.sophia.inria.fr" username="cperUser"/>
		</groups>
	</infrastructure>
</GCMDeployment>
