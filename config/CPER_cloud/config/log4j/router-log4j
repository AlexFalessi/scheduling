log4j.rootLogger=INFO,Router

log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=%X{shortid@hostname} - [%p %20.20c{2}] %m%n

log4j.appender.Router=org.apache.log4j.RollingFileAppender
log4j.appender.Router.File=../../.logs/router.log
log4j.appender.Router.MaxFileSize=10MB
log4j.appender.Router.MaxBackupIndex=5
log4j.appender.Router.layout=org.apache.log4j.PatternLayout
log4j.appender.Router.layout.ConversionPattern=[%-1p %d{ISO8601}] [%C{1}.%M] %m%n 
