log4j.additivity.proactive=false
log4j.logger.proactive=DEBUG,ProActiv

# avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.resourceManager=false
# define RESOURCE MANAGER loggers
log4j.logger.proactive.resourceManager=DEBUG,RMDevFileAppender
log4j.logger.proactive.resourceManager.core=DEBUG
log4j.logger.proactive.resourceManager.user=DEBUG
log4j.logger.proactive.resourceManager.monitoring=DEBUG
log4j.logger.proactive.resourceManager.nodeSource=DEBUG
log4j.logger.proactive.resourceManager.rmnode=DEBUG
log4j.logger.proactive.resourceManager.rmfactory=DEBUG
log4j.logger.proactive.resourceManager.rmlauncher=INFO,CONSOLE
log4j.logger.proactive.resourceManager.consol=INFO,CONSOLE
log4j.logger.proactive.resourceManager.policy=DEBUG

log4j.appender.ProActiv=org.apache.log4j.RollingFileAppender
log4j.appender.ProActiv.File=../../.logs/ProActive_RM.log
log4j.appender.ProActiv.MaxFileSize=10MB
log4j.appender.ProActiv.MaxBackupIndex=5
log4j.appender.ProActiv.layout=org.apache.log4j.PatternLayout
log4j.appender.ProActiv.layout.ConversionPattern=[%-1p %d{ISO8601}] [RM.%C{1}.%M] %m%n

# File appender for verbose developer logging level (FILE3)
log4j.appender.RMDevFileAppender=org.apache.log4j.RollingFileAppender
log4j.appender.RMDevFileAppender.File=../../.logs/RM.log
log4j.appender.RMDevFileAppender.MaxFileSize=10MB
log4j.appender.RMDevFileAppender.MaxBackupIndex=5
log4j.appender.RMDevFileAppender.layout=org.apache.log4j.PatternLayout
log4j.appender.RMDevFileAppender.layout.ConversionPattern=[%-1p %d{ISO8601}] [RM.%C{1}.%M] %m%n

# CONSOLE uses PatternLayout
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=%m%n

# RM Appender configuration (CONSOLE)
log4j.appender.resourceManagerAppender=org.apache.log4j.ConsoleAppender
log4j.appender.resourceManagerAppender.layout=org.apache.log4j.PatternLayout
log4j.appender.resourceManagerAppender.layout.ConversionPattern=[%-5p] [RESOURCE_MANAGER.%C{1}] %m%n